{
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Follow Conventional Commits standard with format: <type>(<scope>): <subject>"
    },
    {
      "text": "Valid types are: feat, fix, docs, style, refactor, perf, test, chore, ci, build"
    },
    {
      "text": "Scope should be the affected module or component name"
    },
    {
      "text": "Use all lowercase in subject line"
    },
    {
      "text": "Start subject with appropriate gitmoji followed by a space"
    },
    {
      "text": "Limit subject line to 50 characters (excluding type/scope)"
    },
    {
      "text": "Separate subject from body with a blank line"
    },
    {
      "text": "Wrap body at 72 characters"
    },
    {
      "text": "Use imperative mood in subject line ('add' not 'adds')"
    },
    {
      "text": "Add footer with BREAKING CHANGE or Closes #123 if applicable"
    }
  ],
  "github.copilot.chat.edits.codesearch.enabled": true,
  "workbench.colorCustomizations": {
    "activityBar.activeBackground": "#232ee9",
    "activityBar.background": "#232ee9",
    "activityBar.foreground": "#e7e7e7",
    "activityBar.inactiveForeground": "#e7e7e799",
    "activityBarBadge.background": "#3a0609",
    "activityBarBadge.foreground": "#e7e7e7",
    "commandCenter.border": "#e7e7e799",
    "sash.hoverBorder": "#232ee9",
    "statusBar.background": "#141ec5",
    "statusBar.foreground": "#e7e7e7",
    "statusBarItem.hoverBackground": "#232ee9",
    "statusBarItem.remoteBackground": "#141ec5",
    "statusBarItem.remoteForeground": "#e7e7e7",
    "titleBar.activeBackground": "#141ec5",
    "titleBar.activeForeground": "#e7e7e7",
    "titleBar.inactiveBackground": "#141ec599",
    "titleBar.inactiveForeground": "#e7e7e799"
  },
  "peacock.color": "#141EC5",
  "cSpell.words": [
    "adminer",
    "analyse",
    "Analyser",
    "backtested",
    "backtesting",
    "erisfydb",
    "financialdatasets",
    "Finnhub",
